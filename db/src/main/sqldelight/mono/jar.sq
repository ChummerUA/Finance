CREATE TABLE jar (
    id TEXT NOT NULL PRIMARY KEY,
    title TEXT NOT NULL,
    description TEXT NOT NULL,
    currency_code INT NOT NULL,
    balance BIGINT NOT NULL,
    goal BIGINT NOT NULL
);

getJars:
SELECT id, title, currency_code, balance, goal
FROM jar;

getJarById:
SELECT *
FROM jar
WHERE jar.id = :jarId;
